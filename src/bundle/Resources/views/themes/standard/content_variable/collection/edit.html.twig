{% extends '@ibexadesign/content_variable/layout.html.twig' %}

{% form_theme form '@ibexadesign/ui/form_fields.html.twig' %}

{% trans_default_domain "content_variables" %}

{% set pathTitle = collection.isNew ? 'path.collection.new'|trans : 'path.collection.edit'|trans({'%name%': collection.name|u.truncate(50) }) %}
{% set pageTitle = collection.isNew ? 'title.collection.new'|trans : 'title.collection.edit'|trans({'%name%': collection.name|u.truncate(50) }) %}

{% block content_variables_collection %}
    {% set sidebar_right = knp_menu_get('content_variables.menu.collection_edit.sidebar_right', [], {}) %}
    {{ knp_menu_render(sidebar_right, {
        'template': '@ibexadesign/ui/menu/context_menu.html.twig'
    }) }}
    {% include '@ibexadesign/content_variable/parts/page_title.html.twig' with {
        title: pageTitle,
        iconsFile: 'bundles/ezplatformcontentvariables/img/icons.svg',
        iconName: 'content-variables-manager',
    } %}
    <div class="px-0 pb-4 ibexa-content-container">

        <div class="container px-0 pb-4 mt-5">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <section class="container mt-4">
                <div class="card ibexa-card">
                    <div class="card-body">
                        {{ form_row(form.name, {'label_attr': {'class': 'ibexa-label'}}) }}
                        {{ form_row(form.description, {'label_attr': {'class': 'ibexa-label'}}) }}
                    </div>
                </div>
            </section>
            <button id="collection-update" type="submit" hidden/>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('ezplatform-content-variables-bulk-edit-css', null, 'ibexa') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ezplatform-content-variables-collection-list-js', null, 'ibexa') }}
{% endblock %}