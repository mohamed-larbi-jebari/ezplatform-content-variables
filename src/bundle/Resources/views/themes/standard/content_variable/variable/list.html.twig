{% extends '@ibexadesign/content_variable/layout.html.twig' %}

{% set show_left_sidebar = true %}

{% trans_default_domain "content_variables" %}

{% block breadcrumbs %}
    {% include '@ibexadesign/ui/breadcrumbs.html.twig' with { items: [
        { value: 'path.root'|trans, url: path('content_variables.collection.list') },
        { value: 'path.collections'|trans , url: path('content_variables.collection.list') },
        { value: collection.name, url: path('content_variables.list', {'id': collection.id}) }
    ]} %}
{% endblock %}

{% block content_variables_collection %}
        {% include '@ibexadesign/ui/page_title.html.twig' with {
            title: collection.name,
            iconName: 'keyword'
        } %}
        <div class="px-0 pb-4 ibexa-content-container">
            {% set form_id = 'variables_bulk_actions' %}
            <section class="container mt-4 px-5">
                <div class="ibexa-table-header">
                    <div class="ibexa-table-header__headline">{{ 'title.variables'|trans }}</div>
                    <div>
                        {% include '@ibexadesign/content_variable/buttons/new.html.twig' with {
                            'title': 'variables.new'|trans,
                            'href': path('content_variables.new', {'id': collection.id}),
                        } %}
                        {% if variables|length > 0 %}
                            {% include '@ibexadesign/content_variable/buttons/update_priority.html.twig' with {
                                'title': 'variable.update_priority'|trans,
                                'id': 'update-priority-variables',
                                'form_id': form_id,
                                'action': 'updatePriority',
                            } %}
                            {% include '@ibexadesign/content_variable/buttons/delete.html.twig' with {
                                'title': 'variable.delete'|trans,
                                'id': 'delete-variables',
                                'form_id': form_id,
                                'action': 'delete',
                                'modal_data_target': 'delete-variables-modal',
                                'message': 'variable.delete.modal.message'|trans,
                            } %}
                        {% endif %}
                    </div>
                </div>

                {% if variables|length > 0 %}
                    {{ form_start(form, {
                        'attr': {
                            'class': 'ibexa-toggle-btn-state',
                            'data-toggle-button-id': '#delete-variables',
                            'id': form_id
                        }
                    }) }}
                    <table class="ibexa-table table mb-3">
                        <thead>
                            <tr>
                                <th class="ibexa-table__cell--has-checkbox"><input type="checkbox" /></th>
                                <th>{{ 'variable.name'|trans }}</th>
                                <th>{{ 'variable.identifier'|trans }}</th>
                                <th>{{ 'variable.priority'|trans }}</th>
                                <th>{{ 'variable.content'|trans }}</th>
                                <th>{{ 'variable.value'|trans }}</th>
                                <th/>
                            </tr>
                        </thead>
                        <tbody>
                        {% for variable in variables %}
                            <tr>
                                <td class="ibexa-table__cell ibexa-table__cell--has-checkbox">
                                    {{ form_widget(form.selectedId[variable.id], {
                                        'attr': {
                                            'class': 'ibexa-input ibexa-input--checkbox'
                                        },
                                        "disabled": not variable.canBeDeleted
                                        }) }}
                                </td>
                                <td class="ibexa-table__cell">{{ variable.name }}</td>
                                <td class="ibexa-table__cell">{{ variable.identifier }}</td>
                                <td class="ibexa-table__cell">
                                    <div class="c-table-view-item__inner-wrapper--input">
                                        {{ form_widget(form.priority[variable.id], {
                                            'attr': {'class': 'form-control content-variable-priority-value'}
                                        }) }}
                                    </div>
                                </td>
                                <td class="ibexa-table__cell">
                                    <a href="{{ path('content_variables.linked_content', {'id': variable.id}) }}">{{ variable.getLinkedContentCount }}</a>
                                </td>
                                <td class="ibexa-table__cell">
                                    {% if variable.isStatic %}
                                        {{ variable.valueStatic }}
                                    {% else %}
                                        {{ 'variable.value.callback'|trans({'%callback%': variable.valueCallback}) }}
                                    {% endif %}
                                </td>
                                <td class="ibexa-table__cell ibexa-table__cell--has-action-btns text-right" width="10%">
                                    {% include '@ibexadesign/content_variable/buttons/linked_content.html.twig' with {
                                        'title': 'variable.content'|trans,
                                        'href': path('content_variables.linked_content', {'id': variable.id}),
                                    } %}
                                    {% include '@ibexadesign/content_variable/buttons/edit.html.twig' with {
                                        'title': 'variable.edit'|trans({'%name%': collection.name|u.truncate(50) }),
                                        'href': path('content_variables.edit', {'id': variable.id}),
                                    } %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {{ form_end(form) }}
                    <div class="ibexa-pagination">
                        <div class="ibexa-pagination__info">
                            {{ 'pagination.viewing'|trans({
                                '%viewing%': pager.currentPageResults|length,
                                '%total%': pager.nbResults}, 'pagination')|raw }}
                        </div>
                        {% if pager.haveToPaginate %}
                            {{ pagerfanta(pager, 'ibexa') }}
                        {% endif %}
                    </div>
                {% else %}
                    <p class="ibexa-table-no-content">{{ 'variable.no_items'|trans }}</p>
                {% endif %}
            </section>
        </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ezplatform-content-variables-variables-list-js', null, 'ibexa') }}
{% endblock %}