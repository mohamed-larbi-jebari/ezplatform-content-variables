{% extends '@ibexadesign/content_variable/layout.html.twig' %}
{% set show_left_sidebar = true %}

{% trans_default_domain "content_variables" %}

{% block breadcrumbs %}
    {% include '@ibexadesign/ui/breadcrumbs.html.twig' with { items: [
        { value: 'path.root'|trans, url: path('content_variables.collection.list') },
        { value: 'path.collections'|trans , url: path('content_variables.collection.list') },
        { value: variable.collection.name, url: path('content_variables.list', {'id': variable.collection.id}) },
        { value: variable.name },
    ]} %}
{% endblock %}

{% block content_variables_collection %}
    {% include '@ibexadesign/ui/page_title.html.twig' with {
        title: 'title.variable.linked_content'|trans({'%name%': variable.name|u.truncate(50) }),
        iconName: 'view-custom'
    } %}
    <div class="px-0 pb-4 ibexa-content-container">
        {% for status, items in linked_content %}
            {% set isCollapsed = status != 1 %}
            <section class="container mt-4 px-5">
                <div class="ibexa-table-header">
                    <div class="ibexa-table-header__headline">{{ ('variable.related_content.content_status.' ~ status)|trans }}</div>
                    <div>
                        {% include '@ibexadesign/content_variable/buttons/collapse.html.twig' with {
                            'containerId': 'content-items-' ~ status,
                            'isCollapsed': isCollapsed
                        } %}
                    </div>
                </div>

                <div id="content-items-{{ status }}" class="{{ isCollapsed ? 'collapse' : 'show' }}">
                    {% if items|length > 0 %}
                        <table class="ibexa-table table mb-3">
                            <thead>
                                <tr>
                                    <th>{{ 'variable.related_content.name'|trans }}</th>
                                    <th>{{ 'variable.related_content.version'|trans }}</th>
                                    <th>{{ 'variable.related_content.field'|trans }}</th>
                                    <th/>
                                </tr>
                            </thead>
                            <tbody>
                            {% for item in items %}
                                <tr>
                                    <td class="ibexa-table__cell">
                                        <a href="{{ path('ibexa.content.view', {'contentId': item.content.id}) }}" target="_blank">{{ item.content.name }}</a>
                                    </td>
                                    <td class="ibexa-table__cell">{{ item.content.versionInfo.versionNo }}</td>
                                    <td class="ibexa-table__cell">
                                        {% for field in item.fields %}
                                            {{ field.name }}
                                            {% if not loop.last %},{% endif %}
                                        {% endfor %}
                                    </td>
                                    <td class="ibexa-table__cell ibexa-table__cell--has-action-btns text-right">
                                        <a href="{{ path('ibexa.content.preview', {'contentId': item.content.id, 'versionNo': item.content.versionInfo.versionNo, 'languageCode': item.content.versionInfo.languageCodes[0]}) }}" target="_blank" class="btn btn-icon mx-3">
                                            <svg class="ibexa-icon ibexa-icon--secondary">
                                                <use xlink:href="{{ asset('bundles/ibexaadminui/img/ibexa-icons.svg') }}#view"/>
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p class="ibexa-table-no-content">{{ 'variable.related_content.no_items'|trans }}</p>
                    {% endif %}
                </div>
            </section>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ezplatform-content-variables-variables-list-js', null, 'ibexa') }}
    {{ encore_entry_script_tags('ezplatform-content-variables-related-content-js', null, 'ibexa') }}
{% endblock %}